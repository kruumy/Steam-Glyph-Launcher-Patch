<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamGlyphLauncherAltAccountPatcher"
        xmlns:Converters="clr-namespace:SteamGlyphLauncherAltAccountPatcher.Converters" x:Class="SteamGlyphLauncherAltAccountPatcher.MainWindow"
        mc:Ignorable="d"
        Title="Steam Glyph Launcher Patcher" Height="155" Width="425" ResizeMode="NoResize" DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Mode=Self}}">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="35"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="FilePathTextBox" 
                 Text="{Binding GlyphClientApp.FilePath}"
                 Grid.Row="0"
                 Grid.Column="0"
                 Margin="3"
                 VerticalContentAlignment="Center" 
                 IsEnabled="False"/>

            <Button x:Name="BrowseButton" 
                Grid.Row="0"
                Grid.Column="1"
                Content="..." 
                Margin="3"
                Click="BrowseButton_Click"/>

        </Grid>


        <TextBlock x:Name="StatusTextBlock"
                   Grid.Row="1" 
                   Text="" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" Initialized="StatusTextBlock_Initialized"/>

        <Button x:Name="PatchButton"
                Grid.Row="2" 
                Margin="3" 
                Content="{Binding GlyphClientApp.IsPatched, ConverterParameter=Unpatch;Patch, Converter={StaticResource BoolToStringChoiceConverter}}"
                Click="PatchButton_Click"
                IsEnabled="{Binding GlyphClientApp.IsValid}"/>
    </Grid>
</Window>
